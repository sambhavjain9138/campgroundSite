<% include ../partials/header %>

<h1 style="text-align:center">add a new comment to the <%= campground.name %></h1>
<div class="container">
    <div class="row">
        <div style="width:30% ;margin:30px auto">
            <form action="/campground/<%=campground._id%>/comments" method="POST">
                <div class="form-group">
                    <textarea name="comment[text]" placeholder="enter yourcomment" rows="10" cols="45" required></textarea>
                </div>
                <div class="form-group">
                    <input class="btn btn-primary btn-lg btn-block" type="submit">
                </div>
            </form>
            <a href="/campground/<%=campground._id%>">do u wish to go back ?</a>
        </div>
    </div>
</div>

<% include ../partials/footer %>