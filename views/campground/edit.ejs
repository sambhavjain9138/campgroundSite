<% include ../partials/header %>

<h1 style="text-align:center">EDIT <%= campground.name%></h1>
<div class="container">
    <div class="row">
        <div style="width:30% ;margin:30px auto">
            <form action="/campground/<%=campground._id%>?_method=PUT" method="POST">
                <div class="form-group">
                    <input class="form-control" type="text" name="campground[name]" value="<%=campground.name%>" required>
                </div>
                <div class="form-group">
                    <input class="form-control" text="text" name="campground[img]" value="<%=campground.img%>" required>
                </div>
                <div class="form-group">
                    <textarea name="campground[description]" rows="10" cols="45"><%=campground.description%></textarea>
                </div>
                <div class="form-group">
                    <input class="btn btn-primary btn-lg btn-block" type="submit">
                </div>
            </form>
            <a href="/campground" >do u wish to go back ?</a>
        </div>
    </div>
</div>

